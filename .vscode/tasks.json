{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "gcc",
      "args": [
        "src/app/main.c",
        "src/app/camera.c",
        "src/math/vec.c",
        "src/math/mat4.c",
        "src/renderer/framebuffer.c",
        "src/renderer/line.c",
        "-I", "src",
        "-I", "include",
        "-lSDL2",
        "-lm",
        "-o", "cad_wireframe",
        "&&", "./cad_wireframe"
    ],
      "group": "build"
    }
  ]
}
